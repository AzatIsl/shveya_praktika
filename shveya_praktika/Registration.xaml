<Window x:Class="shveya_praktika.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:shveya_praktika"
        mc:Ignorable="d"
        Title="Регистрация" Height="450" Width="650"
        ResizeMode="NoResize">


    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock>Логин:</TextBlock>
                <TextBox Width="250" Name="Login"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Пароль:</TextBlock>
                <PasswordBox Width="250" Name="Password"></PasswordBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Повторите пароль:</TextBlock>
                <PasswordBox Width="250" Name="RepeatedPassword"></PasswordBox>
            </StackPanel>
        </StackPanel>
        <Button Content="Создать" Click="ButtonReg_Click"/>
        <Button Content="Авторизация" Click="AutButton_Click"/>
    </StackPanel>
</Window>
