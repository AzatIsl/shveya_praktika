<Window x:Class="shveya_praktika.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:shveya_praktika"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="450"
        ResizeMode="NoResize">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock>Логин:</TextBlock>
                <TextBox Width="250" Name="Login"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Парол:</TextBlock>
                <PasswordBox Width="250" Name="Password"></PasswordBox>
            </StackPanel>
        </StackPanel>
        <Button Content="Войти" Click="AutButton_Click"/>
        <Button Content="Регистрация" Click="RegButton_Click"/>
    </StackPanel>
</Window>
